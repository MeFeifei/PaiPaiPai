<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >



    <!-- 设置外边框宽度和颜色 -->
    <stroke
        android:width="1.5dp"
        android:color="#e78162" />

    <!-- 设置内容与边框的间距 -->
    <padding
        android:bottom="7dp"
        android:left="7dp"
        android:right="7dp"
        android:top="7dp" />

    <!-- 设置圆角矩形效果圆角半径 -->
    <corners android:radius="4dp" />
</shape>
